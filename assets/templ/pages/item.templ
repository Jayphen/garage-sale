package pages

import "garagesale.jayphen.dev/model"
import "garagesale.jayphen.dev/assets/templ/layouts"
import "fmt"

templ ItemPage(i *model.Item) {
@layouts.Layout_base() {
<main>
  <header>
    <h1>{ i.Title }</h1>
    <p>{ i.Description }</p>
  </header>
  for _, im := range i.Images {
  <img src={ fmt.Sprintf("/api/files/%s/%s/%s?thumb=0x400", "items" , i.Id, im) } alt="" />
  }
</main>
}
}
